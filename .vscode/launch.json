{
  "configurations": [
    {
      "name": "Jest: Debug All",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "yarn",
      // NOTE: keep args in sync with settings.json
      "args": ["run", "jest", "--runInBand", "--no-cache", "--watchAll=false"],
      "sourceMaps": true,
      "disableOptimisticBPs": true
    },
    {
      "name": "Jest: Debug File",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "yarn",
      // NOTE: keep args in sync with settings.json
      "args": ["run", "jest", "--runInBand", "--no-cache", "--watchAll=false", "${file}"],
      "sourceMaps": true,
      "disableOptimisticBPs": true
    }
  ]
}
