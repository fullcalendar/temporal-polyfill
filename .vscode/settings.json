{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.nodePath": ".yarn/sdks",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "jestrunner.changeDirectoryToWorkspaceRoot": false, // allows entering sub-workspace, is faster
  "jestrunner.enableYarnPnpSupport": true,
  "jestrunner.codeLensSelector": "**/tests/**/*.{js,jsx,ts,tsx}",
  "jestrunner.debugOptions": {
    "args": ["--no-cache", "--watchAll=false"] // NOTE: keep in sync with launch.json
  }
}
